@model ExMark.Models.LoginModel

@{
    ViewBag.Title = "Log in";
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


<link rel='stylesheet' href='~/static/pages/index/login.css'>

<section id="loginForm">

    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "login" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        <h2 class="login__heading">Please sign in</h2>
        @Html.TextBoxFor(m => m.UserName, new { @class = "input-block-level", placeholder = "Login" })
        @Html.ValidationMessageFor(m => m.UserName)
            
        @Html.PasswordFor(m => m.Password, new { @class = "input-block-level", placeholder = "Password" })
        @Html.ValidationMessageFor(m => m.Password)
        <label class="checkbox">
            @Html.CheckBoxFor(m => m.RememberMe, new { value = "remember-me" })
            Remember me
        </label>
        <br />
        <input type="submit" value="Log in" class="btn btn-large btn-primary" />
    }
</section>